<h1 class="ui center aligned header">Welcome to MessageMe - chat live with Friends</h1>
<h3 class="ui center aligned small icon header">
  <i class="circular power off olive icon"></i>
   Login to continue
</h3>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">

        <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
          <div class="field">
            <%= f.label :username, "Username" %>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder: "Username" %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password, "Password" %>
            <div class="ui left icon input">
            <%= f.text_field :password, placeholder: "Password" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.button "Login", class: "ui blue submit button" %>
        <% end %>

      </div>
    </div>
    <div class="middle aligned column">
      <div class="ui big olive disabled button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>